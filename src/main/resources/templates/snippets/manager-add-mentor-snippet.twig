<form method="post">
    <label for="#edit-mentor-new-name" required>Name</label>
    <input type="text" name="name" id="#edit-mentor-new-name">
    <label for="#edit-mentor-new-login" required>Login</label>
    <input type="text" name="login" id="#edit-mentor-new-login">
    <label for="#edit-mentor-new-password" required>Password</label>
    <input type="password" name="password" id="#edit-mentor-new-password" onmouseover="showPassword()" onmouseleave="hidePassword()">
    <label for="#edit-mentor-new-email" required>Email</label>
    <input type="email" name="email" id="#edit-mentor-new-email">
    <input type="submit" value="Submit">
    <label for="#manager-choose-mentor">Class</label>
    <select name="class_id" id="#manager-choose-class" required>
        {% for school_class in school_classes %}
            <option value="{{school_class.getId()}}">{{school_class.getName()}}</option>
        {% endfor %}
    </select>
</form>

<script>
    function showPassword() {
        document.getElementById("#edit-mentor-new-password").setAttribute("type", "input");
    }

    function hidePassword() {
        document.getElementById("#edit-mentor-new-password").setAttribute("type", "password");
    }
</script>