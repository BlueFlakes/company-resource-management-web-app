<form method="post">
    <label for="#user-creation-name">Name</label>
    <input type="text" name="name" id="#user-creation-name" required>
    <label for="#user-creation-login">Login</label>
    <input type="text" name="login" id="#user-creation-login" required>
    <label for="#user-creation-password">Password</label>
    <input type="text" name="password" id="#user-creation-password" required>
    <label for="#user-creation-email">Email</label>
    <input type="email" name="email" id="#user-creation-email" required>
    <label for="#user-creation-choose-class">Choose class</label>
    <select name="class_id" id="#user-creation-choose-class">
        {% for school_class in school_classes %}
            <option value="{{school_class.getId()}}">{{school_class.getName()}}</option>
        {% endfor %}
    </select>
    <input type="submit" value="Submit">
</form>