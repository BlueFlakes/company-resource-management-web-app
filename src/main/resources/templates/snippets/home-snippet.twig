<div class="chat">
    <table class="chat-messages">
        <thead>
        <tr>
            <th class="user">Name</th>
            <th class="message">Message</th>
        </tr>
        </thead>
        <tbody id="chat">
        </tbody>
    </table>

    <form onsubmit="return send()">
        <input type="hidden" name="chat-user" value="{{ user.getName() }}" id="name">
        <input type="text" name="chat-message" id="message" autofocus required>
        <input type="submit" value="Submit">
    </form>
</div>